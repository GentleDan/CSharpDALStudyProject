@{ ViewData["Title"] = "Create"; }

<h1>Пополнение склада</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label">Склад</label>
                <select name="StoreHouseId" class="form-control" asp-items="@(new SelectList(ViewBag.Storehouses, "Id", "StoreHouseName"))"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Материал</label>
                <select name="MaterialId" class="form-control" asp-items="@(new SelectList(ViewBag.Materials, "Id", "MaterialName"))"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Количество</label>
                <input type="text" class="form-control" name="Count" />
            </div>
            <div class="form-group">
                <input type="submit" value="Пополнить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
